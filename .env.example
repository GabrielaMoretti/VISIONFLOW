# ============================================
# VISIONFLOW - Environment Variables Template
# ============================================
# Copy this file to .env and customize values

# ============================================
# Application Environment
# ============================================
NODE_ENV=development
PYTHON_ENV=development

# ============================================
# Frontend Configuration (Next.js)
# ============================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=http://localhost:8000

# ============================================
# Backend Configuration (FastAPI)
# ============================================
BACKEND_PORT=8000

# File Upload
UPLOAD_MAX_SIZE=52428800  # 50MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png,webp,tiff,raw,cr2,nef,dng

# ============================================
# AI Models Configuration
# ============================================
MODELS_CACHE_DIR=/app/models
DOWNLOAD_MODELS_ON_START=true

# MiDaS (Depth Estimation)
MIDAS_MODEL=dpt_large  # Options: dpt_large, dpt_hybrid, midas_v21

# ESRGAN (Super-Resolution)
ESRGAN_MODEL=RealESRGAN_x4plus

# UÂ²-Net (Background Removal)
UNET_MODEL=u2net

# ============================================
# Volumes Configuration
# ============================================
VOLUMES_PATH=./volumes

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Database (Future)
# ============================================
# DATABASE_URL=sqlite:///./visionflow.db
# DATABASE_URL=postgresql://user:password@localhost/visionflow

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Performance
# ============================================
# Workers for backend (auto-detect if not set)
# WORKERS=4

# GPU acceleration (requires NVIDIA Docker Toolkit)
# USE_GPU=false

# ============================================
# Security (Production)
# ============================================
# SECRET_KEY=change-this-to-a-random-string-in-production
# JWT_ALGORITHM=HS256
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# External Services (Future)
# ============================================
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=

# REDIS_URL=redis://localhost:6379

# ============================================
# Development Tools
# ============================================
# Enable debug mode
DEBUG=false

# Hot reload (handled by docker-compose for dev)
# RELOAD=true
